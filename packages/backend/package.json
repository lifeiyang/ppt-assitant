{
  "name": "@ai-ppt/backend",
  "version": "1.0.0",
  "description": "Backend API server for AI PowerPoint Generator",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "db:init": "ts-node src/scripts/initDatabase.ts",
    "db:migrate": "ts-node -e \"import('./src/migrations').then(m => m.runMigrations())\"",
    "db:seed": "ts-node -e \"import('./src/seeds').then(s => s.runSeeds())\""
  },
  "dependencies": {
    "@ai-ppt/shared": "^1.0.0",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.4",
    "pg": "^8.11.0",
    "pptxgenjs": "^3.12.0",
    "redis": "^4.6.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/multer": "^1.4.0",
    "@types/node": "^20.4.0",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^2.0.0",
    "@types/uuid": "^9.0.0",
    "jest": "^29.6.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.1.0"
  }
}
